<div class="company-card">
  <% last = company.url.split(".")[2] %>
  <% last = last.split("/").first %>
  <div class="company-card-logo" style="background-image: url('http://logo.clearbit.com/www.<%= company.url.split(".")[1] %>.<%= last %>')">
  </div>
  <div class="company-card-content">
    <h3><%= company.name %></h3>
    <div>
      <p><i class="fa fa-user"></i> <%= company.employees %></p>
      <p><i class="fa fa-map-marker"></i>
      <% company.locations.each do |location| %>
      <%= "#{ location.city.name }"  %>
      <% end %>
      </p>

    </div>
  </div>
  <div class="company-card-control <%= company.category.name == 'product' ? 'blue-card-control' : 'orange-card-control' %>">
    <%= link_to company.url, class: "card-link" do %>
      <i class="fa fa-link"></i>
    <% end %>
  </div>
</div>
